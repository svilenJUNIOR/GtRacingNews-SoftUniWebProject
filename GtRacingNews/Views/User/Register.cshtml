<h1 style="text-align:center; color:white">Create an account</h1>
<div class="box">
    <form method="post">
        <table style="height: 300px">
            <tr>
                <td>
                    <label for="email">Email</label>
                </td>
                <td width="300px">
                    <input type="text" class="form-control" id="email" name="email" placeholder="Must end with @@email.com" />
                </td>
            </tr>

            <tr>
                <td>
                    <label for="password">Password</label>
                </td>
                <td>
                    <input type="password" class="form-control" id="password" name="password" />
                </td>
            </tr>

            <tr>
                <td>
                    <label for="confirmPassword">Confirm Password</label>
                </td>
                <td>
                    <input type="password" class="form-control" id="password" name="confirmPassword" />
                </td>
            </tr>

            <tr>
                <td>
                    <label for="username">Username</label>
                </td>
                <td>
                    <input type="text" class="form-control" id="username" name="username" />
                </td>
            </tr>

            <tr>
                <td>
                    <p>Submit</p>
                </td>
                <td>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </td>
            </tr>
        </table>
    </form>
</div>

