@foreach (var team in Model)
{
    <div class="container">
        <div class="row">
            <div class="col">
                <img width="200px" height="150px" src="@team.TeamLogo">
            </div>
            <div class="col" style="text-align:center; margin-top: 50px; font-size: 30px">
                @team.TeamName
            </div>
            <div class="col" style="text-align:center; margin-top: 50px; font-size: 30px">
                available positions: 3
            </div>
            <div class="col" style="text-align:center; margin-top: 50px; font-size: 30px">
                 <a href="/Driver/AddToTeam?teamId=@team.TeamId&driverId=@team.DriverId"class="btn btn-primary">Add to team</a>
            </div>
        </div>
    </div>
}