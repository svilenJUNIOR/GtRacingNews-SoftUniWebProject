@using GtRacingNews.ViewModels.Team;
@model ViewTeamsAndChampsViewModel

<div class="row" style="margin-left: 15px">

    @foreach (var champ in Model.Championships)
    {
        <div class="box" style="margin-bottom: 10px">
            <h2 style="text-align:center; font-size: 30px">@champ.Name</h2>
        </div>

        @if (champ.Teams.Count() == 0)
        {
            <p style="text-align:center; font-size: 30px">No Teams in this championship yet!</p>
        }

        @foreach (var team in Model.Teams)
        {

            @if (@team.ChampionshipName == @champ.Name)
            {
                <div class="card" style="width: 20rem; margin-left: 10px; margin-top: 10px; margin-bottom: 10px; ">
                    <img src="@team.LogoUrl" class="card-img-top" style="height: 200px;">
                    <div class="card-body">
                        <h5 class="card-title"><strong>Name:</strong> @team.Name</h5>
                        <h5 class="card-title"><strong>Car:</strong> @team.CarModel</h5>
                        <h5 class="card-title"><strong>Drivers:</strong> @string.Join(", ", @team.Drivers)</h5>
                    </div>
                </div>
            }
        }
    }

</div>

<style>
    div.box {
        box-shadow: 0px 0px 10px 0px black;
        background-color: lightgray;
    }
</style>

<link rel="stylesheet" href="~/css/All.css"></link>