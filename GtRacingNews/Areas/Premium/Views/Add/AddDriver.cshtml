@model GtRacingNews.ViewModels.Driver.AddNewDriverFormModel
@await Html.PartialAsync("PartialHeader");

<h1 style="text-align:center; color:white">Add new racing driver</h1>
<div class="box">
    <form method="post">
        <table style="height: 300px">
            <tr>
                <td>
                    <label for="name">Name</label>
                </td>
                <td width="300px">
                    <input type="text" class="form-control" id="name" name="name" placeholder="Must be less than 30 symbols" />
                </td>
            </tr>

            <tr>
                <td>
                    <label for="age">Age</label>
                </td>
                <td>
                    <input type="number" class="form-control" id="age" name="age" />
                </td>
            </tr>

            <tr>
                <td>
                    <label for="cup">Cup</label>
                </td>
                <td>
                    <input type="text" class="form-control" id="cup" name="cup" placeholder="Must be less than 10 symbols" />
                </td>
            </tr>

            <tr>
                <td>
                    <label for="imageUrl">ImageUrl</label>
                </td>
                <td>
                    <input type="text" class="form-control" id="imageUrl" name="imageUrl" />
                </td>
            </tr>

            <tr>
                <td>
                    <label for="teamName">TeamName</label>
                </td>
                <td>
                    <select name="teamName" id="teamName">
                        @foreach (var team in @Model.Teams)
                        {
                            <option value="@team.Name">@team.Name</option>
                        }
                    </select>
                </td>
            </tr>

            <tr>
                <td>
                    <p>Submit</p>
                </td>
                <td>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </td>
            </tr>
        </table>
    </form>
</div>

<link rel="stylesheet" href="~/css/DriverCss/AddDriver.css"></link>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<script src="~/js/OpenSideMenu.js"></script>
<script src="~/js/CloseSideMenu.js"></script>